{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    // "lib": ["es2022"],
    "lib": ["ES2023"],
    "module": "NodeNext",
    "moduleDetection": "force",
    "moduleResolution": "NodeNext",
    // "moduleResolution": "node16",
    "noUncheckedIndexedAccess": true,
    "outDir": "./build",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    // "sourceMap": false,
    "strict": true,
    // "target": "es2022"
    "target": "ES2023",

  },
  "exclude": ["node_modules"],
  "include": ["./backend/src"]
}
