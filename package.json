{
    "name": "vite-mern-template",
    "version": "2.0.3",
    "main": "backend/src/index.ts",
    "scripts": {
        "watch": "tsc --watch",
        "backend": "node --watch build/index.js",
        "dev:backend": "cross-env NODE_ENV=development concurrently \"npm run watch\" \"npm run backend\"",
        "dev:frontend": "cross-env NODE_ENV=development npm start --prefix ./frontend",
        "check-types": "tsc",
        "prettier": "prettier --write .",
        "build:backend": "cross-env NODE_ENV=production tsc",
        "build:frontend": "cross-env NODE_ENV=production npm run build --prefix ./frontend",
        "build": "tsc && npm run build:frontend",
        "custom_start": "cross-env NODE_ENV=development \"npm run dev:backend\" \"npm run dev:frontend\"",
        "dev": "cross-env NODE_ENV=development concurrently \"npm run dev:backend\" \"npm run dev:frontend\""
    },
    "repository": "https://github.com/apicgg/vite-mern-template.git",
    "license": "MIT",
    "dependencies": {
        "argon2": "^0.40.1",
        "chalk": "^4.1.2",
        "dotenv": "^16.4.5",
        "express": "^4.21.1",
        "express-async-handler": "^1.2.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.7.0",
        "@emotion/react": "^11.13.3",
        "@emotion/styled": "^11.13.0",
        "@fontsource/roboto": "^5.1.0",
        "@mui/icons-material": "^6.1.6",
        "@mui/material": "^6.1.6",
        "@reduxjs/toolkit": "^2.2.1",
        "@tanstack/react-query": "^5.51.23",
        "axios": "^1.7.7",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-redux": "^9.1.0",
        "react-router-dom": "^6.22.3",
        "vite-plugin-svgr": "^4.2.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/node": "^20.14.12",
        "@typescript-eslint/eslint-plugin": "^7.18.0",
        "@typescript-eslint/parser": "^7.18.0",
        "concurrently": "^8.2.2",
        "cross-env": "^7.0.3",
        "eslint": "^8.57.0",
        "npm-watch": "^0.13.0",
        "prettier": "3.2.5",
        "typescript": "^5.5.4",
        "@types/chalk": "^2.2.4",
        "@tanstack/eslint-plugin-query": "^5.51.15",
        "@testing-library/jest-dom": "^6.4.2",
        "@testing-library/react": "^14.2.1",
        "@types/react": "^18.2.64",
        "@types/react-dom": "^18.2.21",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.18",
        "eslint-plugin-react": "^7.34.0",
        "jsdom": "^24.0.0",
        "postcss": "^8.4.35",
        "tailwindcss": "^3.4.1",
        "vite": "^5.1.5",
        "vitest": "^1.3.1"
    }
}
